<Window x:Class="ESM.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:ESM.ViewModels"
        Title="Easy Schedule Manager" Height="450" Width="800">
    <Window.Resources>
        <!-- ViewModel → UI로 연결될 DataTemplate -->
        <DataTemplate DataType="{x:Type vm:TaskItemViewModel}">
            <StackPanel Margin="10">
                <TextBlock Text="작업 이름"/>
                <TextBox Text="{Binding Name}" Margin="0,0,0,8"/>

                <TextBlock Text="실행 파일 경로"/>
                <TextBox Text="{Binding ActionPath}" Margin="0,0,0,8"/>

                <TextBlock Text="인자 (Args)"/>
                <TextBox Text="{Binding Args}" Margin="0,0,0,8"/>

                <TextBlock Text="트리거"/>
                <TextBox Text="{Binding Trigger}" Margin="0,0,0,8"/>

                <TextBlock Text="상태"/>
                <TextBox Text="{Binding State}" Margin="0,0,0,8"/>
            </StackPanel>
        </DataTemplate>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <!-- 작업 목록 -->
        <ListView Grid.Column="0"
                  ItemsSource="{Binding Tasks}"
                  SelectedItem="{Binding SelectedTask}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="이름" DisplayMemberBinding="{Binding Name}" Width="140"/>
                    <GridViewColumn Header="트리거" DisplayMemberBinding="{Binding Trigger}" Width="180"/>
                </GridView>
            </ListView.View>
        </ListView>

        <GridSplitter Grid.Column="1" Width="6" HorizontalAlignment="Stretch"/>

        <!-- 작업 상세 편집 -->
        <StackPanel Grid.Column="2" DataContext="{Binding SelectedTask}">
            <TextBlock Text="작업 이름"/>
            <TextBox Text="{Binding Name}" Margin="0,0,0,8"/>

            <TextBlock Text="실행 파일 경로"/>
            <TextBox Text="{Binding ActionPath}" Margin="0,0,0,8"/>

            <TextBlock Text="인자 (Args)"/>
            <TextBox Text="{Binding Args}" Margin="0,0,0,8"/>

            <TextBlock Text="트리거"/>
            <TextBox Text="{Binding Trigger}" Margin="0,0,0,8"/>

            <TextBlock Text="상태"/>
            <TextBox Text="{Binding State}" Margin="0,0,0,8"/>

            <!-- 버튼 추가 -->
            <Button Content="스케줄 등록"
            Command="{Binding DataContext.AddScheduleCommand, RelativeSource={RelativeSource AncestorType=Window}}"
            Margin="0,10,0,0" Width="150" Height="30"/>
        </StackPanel>
    </Grid>
</Window>
